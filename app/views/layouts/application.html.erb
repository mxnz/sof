<!DOCTYPE html>
<html>
<head>
  <title>Sof</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= link_to('Log in', new_user_session_path) if !signed_in? && !current_page?(new_user_session_path) %>
<%= link_to('Log out', destroy_user_session_path, method: :delete) if signed_in? %>

<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>

<%= yield %>

</body>
</html>
