<% cache_if((!user_signed_in? && !current_page?(new_user_registration_path) && !current_page?(new_user_session_path)), 'page_header') do %>
<!DOCTYPE html>
  <html>
  <head>
    <title>Sof</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

  <%= link_to('Ask Question', new_question_path) %>
  <%= link_to('Sign up', new_user_registration_path) if !signed_in? && !current_page?(new_user_registration_path) %>
  <%= link_to('Log in', new_user_session_path) if !signed_in? && !current_page?(new_user_session_path) %>
  <%= link_to('Log out', destroy_user_session_path, method: :delete) if signed_in? %>

<% end %>

<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>

<%= yield %>

</body>
</html>
