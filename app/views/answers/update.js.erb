var parent = $("#answer_" + "<%= @answer.id %>");
parent.find(".answer_errors").empty();
<% if @answer.errors.present? %>
  parent.find(".answer_errors").html("<%= j_render 'shared/error_messages', target: @answer %>");
<% else %>
  parent.find("[data-action='edit_answer']").show();
  parent.find("h2").hide();
  parent.find("form").hide();
  parent.find(".answer_body").html("<%=j @answer.body %>");
  parent.find(".attachments").html("<%= j_render @answer.attachments %>")
<% end %>
